<?xml version="1.0" encoding="utf-8"?>

<resources>

	<style name="PlaybackText">
                <item name="android:textColor">#ffffffff</item>
                <item name="android:shadowColor">#ff404040</item>
                <item name="android:shadowRadius">2.0</item>
        </style>
        	<style name="playback_info">
		<item name="android:textSize">5pt</item>
		<item name="android:textColor">#fff</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="playback_time">
		<item name="android:textSize">5pt</item>
		<item name="android:textColor">#fff</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="TunesButton">
		<item name="android:background">#000000FF</item>
        <item name="android:layout_width">62dip</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:paddingLeft">5dip</item>
	</style>
	<style name="TunesButton.PlayPause">
		<item name="android:src">@+drawable/play_button</item>
        <item name="android:layout_width">94dip</item>
        <item name="android:layout_height">56dip</item>
	</style>
	<style name="TunesButton.Fwd">
		<item name="android:src">@+drawable/ffw_button</item>
	</style>
	<style name="TunesButton.Stop">
		<item name="android:src">@+drawable/right_play</item>
	</style>
	<style name="TunesButton.Rew">
		<item name="android:src">@+drawable/rew_button</item>
	</style>
    <style name="TunesButton.Playlist">
        <item name="android:src">@+drawable/playlist</item>
        <item name="android:layout_width">26dip</item>
        <item name="android:layout_height">25dip</item>
    </style>
    <style name="TunesButton.Back">
        <item name="android:src">@+drawable/back</item>
